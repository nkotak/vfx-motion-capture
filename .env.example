# VFX Motion Capture Environment Configuration

# Application
APP_NAME=VFX Motion Capture
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ComfyUI
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
COMFYUI_USE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database
DATABASE_URL=sqlite+aiosqlite:///./vfx_motion_capture.db

# Video Processing
MAX_VIDEO_DURATION=60
MAX_VIDEO_SIZE_MB=500
MAX_IMAGE_SIZE_MB=50
DEFAULT_FPS=24

# Hardware
DEVICE=cuda
GPU_MEMORY_FRACTION=0.9
ENABLE_FP16=true
ENABLE_XFORMERS=true

# Security
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Real-time
REALTIME_FPS=30
REALTIME_BUFFER_SIZE=5
REALTIME_MAX_LATENCY_MS=100

# File retention
MAX_FILE_AGE_HOURS=24
MAX_JOB_AGE_HOURS=24
